@using NufarMeir_GalOxenberg.Shared.DTOs
@inject HttpClient Http

<style>
    :root
    {
        --mud-palette-secondary: #12273D;
        --mud-palette-secondary-darken: #1C3D59;
    }
</style>

<PageTitle>Delete Game</PageTitle>

<MudDialog Style="background-color:#EFEED8; font-family:Fredoka">
    <DialogContent>
        <MudText Class="popUp" Style="font-family:Fredoka">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Style="border-style:solid; border-width:1px; font-family:Fredoka">ביטול</MudButton>
        <MudButton Style="font-family:Fredoka" Color="@Color" Variant="Variant.Filled" @onclick=DeleteGame>@ButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    [Parameter] public string ButtonText { get; set; }

    [Parameter] public Color Color { get; set; }

    [Parameter] public GameClass GameToDelete { get; set; }


    void Cancel() => MudDialog.Cancel();



    void DeleteGame()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

}
